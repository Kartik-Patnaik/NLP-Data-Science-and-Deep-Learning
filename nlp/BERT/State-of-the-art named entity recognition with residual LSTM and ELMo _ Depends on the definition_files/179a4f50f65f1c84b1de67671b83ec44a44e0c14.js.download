//When the user scrolls the page, execute myFunction
function myFunction() {
  var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
  var height = document.getElementById("mc-embedded-subscribe-form").offsetParent.offsetTop + document.getElementById("mc-embedded-subscribe-form").offsetTop - document.documentElement.clientHeight;
  //  document.documentElement.scrollHeight - document.documentElement.clientHeight;
  var scrolled = (winScroll / height) * 100;
  if (scrolled >= 80 && typeof scrolled_happened === 'undefined') {
    window.scrolled_happened = true;
    plausible('scrolled>=80%');
  }
  document.getElementById("myBar").style.width = scrolled + "%";
}
;
//Get the button:
try {
    mybutton = document.getElementById("myBtn");
} catch {}

// When the user scrolls down 20px from the top of the document, show the button
// and update the progressbar
window.onscroll = function() {
    try {
        mybutton = document.getElementById("myBtn");
        scrollFunction();
    } catch {}
    try {
        myFunction();
    } catch {}
};
;
function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
	mybutton.style.overflow = "visible";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0; // For Safari
  document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
}
